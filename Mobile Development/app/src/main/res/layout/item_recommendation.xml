<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_recommendation"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    android:layout_gravity="center"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="32dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/text_hospital_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:text="@string/default_hospital_name"
            android:textSize="16sp"
            android:textColor="@color/french_blue"
            android:maxLines="1"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_doctor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:text="@string/default_doctor_name"
            android:textSize="15sp"
            android:textColor="@color/argentinian_blue"
            android:layout_marginTop="12dp"
            android:maxLines="1"
            card_view:layout_constraintTop_toBottomOf="@id/text_hospital_name"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_hospital_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/default_hospital_address"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/deep_blue"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            card_view:layout_constraintTop_toBottomOf="@id/text_doctor_name"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_recommendation"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/manrope_bold"
            android:text="@string/default_text_button_recommendation"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:padding="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:includeFontPadding="false"
            android:elevation="0dp"
            android:background="@drawable/button_recommendation_background"
            card_view:layout_constraintTop_toBottomOf="@id/text_hospital_address"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>